{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "slug",
          "name": "slug",
          "type": "slug"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string",
          "single": true,
          "default": "Elio Struyf"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags",
          "default": []
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.content.pageFolders": [
    {
      "title": "Posts",
      "path": "[[workspace]]/content/post",
      "previewPath": "post"
    }
  ],
  "frontMatter.taxonomy.tags": [
    "cms",
    "demo"
  ],
  "frontMatter.taxonomy.categories": [],
  "frontMatter.content.snippets": {
    "Image caption": {
      "description": "Add a new image with image caption",
      "body": "{{< caption \"[[&mediaUrl]]\" \"[[caption]]\" >}}",
      "isMediaSnippet": true
    },
    "Blockquote": {
      "description": "Snippet for creating a blockquote",
      "body": "{{< blockquote type=\"[[type]]\" text=\"[[selection]]\" >}}",
      "fields": [
        {
          "name": "type",
          "title": "type",
          "type": "choice",
          "choices": [
            "info",
            "warning",
            "important"
          ]
        },
        {
          "name": "selection",
          "title": "selection",
          "type": "string",
          "single": false,
          "default": "FM_SELECTED_TEXT"
        }
      ]
    }
  }
}